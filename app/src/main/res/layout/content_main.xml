<?xml version="1.0" encoding="utf-8"?>

<androidx.swiperefreshlayout.widget.SwipeRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/swipeContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#dddddd">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#ffffff"
                android:layout_marginBottom="5dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:paddingTop="5dp"
                    android:textSize="15dp"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:textStyle="italic"
                    android:textColor="#000000"
                    android:layout_weight="0"
                    android:layout_marginBottom="10dp"
                    android:text="Showing data for this month"
                    android:drawablePadding="@dimen/fab_margin"
                    android:drawableLeft="@drawable/purple_calendar"/>


            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#ffffff"
            android:layout_marginBottom="5dp">

            <TextView
                android:id="@+id/income"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:textStyle="bold"
                android:textColor="#545454"
                android:layout_gravity="center"
                android:textSize="60dp"
                android:gravity="center_vertical"
                android:text="$0.00"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:textSize="25dp"
                android:layout_gravity="center_horizontal|center_vertical"
                android:textStyle="italic"
                android:textColor="#000000"
                android:layout_weight="0"
                android:layout_marginBottom="10dp"
                android:text="Income"
                android:drawablePadding="@dimen/fab_margin"
                android:drawableLeft="@drawable/green_arrow_right"/>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#ffffff"
            android:layout_marginBottom="5dp">

            <TextView
                android:id="@+id/expense"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:textStyle="bold"
                android:textColor="#545454"
                android:layout_gravity="center"
                android:textSize="60dp"
                android:gravity="center_vertical"
                android:text="$0.00"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:textSize="25dp"
                android:layout_gravity="center_horizontal|center_vertical"
                android:textStyle="italic"
                android:textColor="#000000"
                android:layout_weight="0"
                android:layout_marginBottom="10dp"
                android:text="Expenses"
                android:drawablePadding="@dimen/fab_margin"
                android:drawableLeft="@drawable/red_arrow_left"/>

        </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#ffffff"
        android:layout_marginBottom="5dp">


        <TextView
            android:id="@+id/savings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:textStyle="bold"
            android:textColor="#545454"
            android:layout_gravity="center"
            android:textSize="60dp"
            android:gravity="center_vertical"
            android:text="$0.00"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:textSize="25dp"
            android:layout_gravity="center_horizontal|center_vertical"
            android:textStyle="italic"
            android:textColor="#000000"
            android:layout_weight="0"
            android:layout_marginBottom="10dp"
            android:text="Savings"
            android:drawablePadding="@dimen/fab_margin"
            android:drawableLeft="@drawable/green_piggy_bank"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#ffffff"
        android:layout_marginBottom="5dp">

        <TextView
            android:id="@+id/networth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:textStyle="bold"
            android:textColor="#545454"
            android:layout_gravity="center"
            android:textSize="50dp"
            android:gravity="center_vertical"
            android:text="$0.00"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:textSize="25dp"
            android:layout_gravity="center_horizontal|center_vertical"
            android:textStyle="italic"
            android:textColor="#000000"
            android:layout_weight="0"
            android:layout_marginBottom="10dp"
            android:text="Net Worth"
            android:drawablePadding="@dimen/fab_margin"
            android:drawableLeft="@drawable/blue_bank"/>


    </LinearLayout>

</LinearLayout>

</ScrollView>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
